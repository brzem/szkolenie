                    <include name="QuestionaryPromptAlertTest" />
                    <include name="QuestionaryConfirmAcceptTest" />
                    <include name="QuestionaryConfirmRejectTest" />
                    <include name="QuestionaryRightClickTest" />
                    <include name="QuestionaryProcessTest" />
                    <include name="QuestionaryDoubleClickTest" />
                    <include name="QuestionaryNewTabTest" />
